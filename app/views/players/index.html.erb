<h1>All Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td colspan=4>
        <%= link_to 'New Player', new_player_path %>
      </td>
    </tr>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.rating %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

